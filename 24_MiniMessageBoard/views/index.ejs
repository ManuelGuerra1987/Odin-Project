
<html>
  <head>
    <title>Homepage</title>
    <link rel="stylesheet" href="/styles.css">
  </head>
  <body>
    
    <br>
    <a href="new"><span> New message </span></a>

    <h1>Mini Messageboard</h1>
    <ul>
      <% messages.forEach(function(message, index) { %>
        <li>
          <strong>Message:</strong> <%= message.text %><br>
          <strong>User:</strong> <%= message.user %><br>
          <strong>Date:</strong> <%= message.added %><br>
          <a href="/message/<%= index %>"><span> Open </span></a>
        </li>
      <% }) %>
    </ul>

      <%- include('footer') %>
  </body>
</html>

